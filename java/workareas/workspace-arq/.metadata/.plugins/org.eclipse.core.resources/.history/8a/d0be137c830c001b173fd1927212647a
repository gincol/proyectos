version: '3.8'

services:

  db:
    image: postgres:13-alpine
    container_name: db
    restart: always
    ports:
      - "5432:5432"
    environment:
      - POSTGRES_PASSWORD=postgres
      - POSTGRES_USER=postgres
      - POSTGRES_DB=owasp
    volumes:
      - owasp-db:/var/lib/postgresql/data
      
  app:
    build: 
      context: .
      dockerfile: ./cloud/docker/Dockerfile-app
      args:
        artifactid: sb-owasp
        sonar: 192.168.100.13:9000
    image: owasp-app:1.0.0    
    container_name: app
    restart: always
    ports:
      - "8080:8080"
    environment:
      - postgres_host=db
      - postgres_db=owasp
      - postgres_user=postgres
      - postgres_password=postgres
      - SPRING_PROFILES_ACTIVE=docker
    depends_on:
      - db
    links:
      - db
      
volumes:
  owasp-db:      