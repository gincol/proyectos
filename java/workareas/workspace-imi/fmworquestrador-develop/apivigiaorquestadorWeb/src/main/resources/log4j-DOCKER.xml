<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J//EN" "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/' debug="true">

	<appender name="FILE" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="/var/logs/apivigiaorquestador/apivigiaorquestador.log" />
		<param name="MaxFileSize" value="10MB" />
		<param name="MaxBackupIndex" value="5" />

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%l] %m%n" />
		</layout>
	</appender>

	<category name="org.springframework" additivity="false">
		<level value="info" />
		<appender-ref ref="FILE" />
	</category>

	<category name="net.opentrends.openframe.services" additivity="false">
		<level value="info" />
		<appender-ref ref="FILE" />
	</category>

	<category name="es.bcn.imi.framework.vigia" additivity="false">
		<level value="debug" />
		<appender-ref ref="FILE" />
	</category>

</log4j:configuration>